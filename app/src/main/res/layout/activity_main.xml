<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/textView"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/dateLabel"
        android:text="Large Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:textStyle="bold"
        android:shadowColor="#ff0fff50"
        android:textColor="#ff093671" />

    <TextView android:id="@+id/todayQuote"
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/dateLabel"
        android:layout_toEndOf="@+id/dateLabel"
        android:layout_marginTop="119dp"
        android:layout_alignParentStart="true"
        android:textColor="#ff16cf0e"
        android:textColorHighlight="#ff21ff8f"
        android:textStyle="bold|italic" />

    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/todayQuote"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:layout_below="@+id/edit_message"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:onClick="sendMessage" />

</RelativeLayout>

