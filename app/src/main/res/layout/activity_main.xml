<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView android:id="@+id/dateLabel"
        android:text="Large Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:shadowColor="#ff0fff50"
        android:textColor="#ff093671"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/lineSep"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/dateLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/activityNamelbl"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/lineSep"
        android:layout_toEndOf="@+id/button" />


    <View android:id="@+id/lineSep2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/activityNamelbl"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/todayQuote"
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff16cf0e"
        android:textColorHighlight="#ff21ff8f"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/activityTextLbl"
        android:layout_toEndOf="@+id/activityNamelbl" />

    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/todayQuote"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:layout_below="@+id/edit_message"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:onClick="sendMessage"
        android:id="@+id/button" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/activityTextLbl"
        android:layout_below="@+id/activityNamelbl"
        android:layout_toStartOf="@+id/activityNamelbl"
        android:layout_marginTop="72dp" />

</RelativeLayout>

